{% extends 'base.html.twig' %}

{% block title %}Projet{% endblock %}

{% block body %}
<section id="show_project">
    <h1>Projet</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Langage</th>
                <td>{{ project.language }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ project.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>Lien</th>
                <td>{{ project.link }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ project.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('project_index') }}">Revenir à la liste</a>

    <a href="{{ path('project_edit', {'id': project.id}) }}">Modifier</a>

    {{ include('project/_delete_form.html.twig') }}
</section>
{% endblock %}
